    <template id="portfolio_garage_page" name="Portfolio">
        <section class="car_garage future">
            <div class="container">
                <div class="common_p">
                    Future
                </div>
                <h5 class="common_heading">Our garage
                </h5>
                <div class="future_content">
                    <div class="row">
                        <t t-foreach="hot_deals" t-as="hot_deal"
                           t-if="hot_deals">
                            <div class="col-lg-4 col-md-4 col-sm-6 col-12">
                                <div class="future_card">
                                    <a href="#">
                                        <div class="img_wrapper">
                                            <img t-attf-src="/web/image?model=car.garage&amp;field=image&amp;id=#{hot_deal.id}"
                                                 class="img img-fluid rotate-center"
                                                 alt="" loading="lazy"/>
                                        </div>
                                        <p class="img_caption">
                                            <t t-esc="hot_deal.name"/>
                                        </p>
                                    </a>
                                </div>
                            </div>
                        </t>
                    </div>
                </div>
            </div>
        </section>
        <section class="all_type future" style="margin-bottom:100px;">
            <div class="container">
                <div class="common_p">
                    Future
                </div>
                <h5 class="common_heading">All type
                </h5>
                <div class="row">
                    <div class="container">
                        <div class="row pt-4">
                            <t t-foreach="car_types" t-as="car_type"
                               t-if="car_types">
                                <div class="col-12 px-0 mt-5 pt-3">
                                    <div class="all_type_card"
                                         t-attf-style="background-image:url('data:image/png;base64,#{car_type.image}')">
                                        <div class="row w-100 type-name">
                                            <div class="col-lg-5 offset-lg-7 col-md-6 offset-md-6 col-sm-9 offset-sm-3 col-9 offset-3">
                                                <span>
                                                    <t t-esc="car_type.name"/>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </t>
                        </div>
                    </div>
                </div>
            </div>
        </section>
